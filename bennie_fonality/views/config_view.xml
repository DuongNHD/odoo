<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="fonality_config_form" model="ir.ui.view">
            <field name="name">Fonality Config form</field>
            <field name="model">fonality.config</field>
            <field name="arch" type="xml">
                <form string="Configure">
                    <group>
                        <field name="url" />
                    </group>
                    <footer>
                        <button name="configure" 
                            type="object"
                            string="Save"
                            class="oe_highlight" />
                        <button special="cancel" 
                            string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="fonality_config_action"
                    name="Fonality Config"
                    res_model="fonality.config"
                    src_model="ir.config_parameter"
                    view_mode="form"
                    view_id="fonality_config_form"
                    target="new"
                    />
    </data>
</openerp>
