<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="fonality_test_call_form" model="ir.ui.view">
            <field name="name">Fonality Test Call form</field>
            <field name="model">fonality.test_call</field>
            <field name="arch" type="xml">
                <form string="Configure">
                    <group>
                        <field name="number" />
                        <field name="response_text" readonly="1" widget="text"/>
                    </group>
                    <footer>
                        <button name="call" 
                            type="object"
                            string="Test Call"
                            class="oe_highlight" />
                        <button special="cancel" 
                            string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="fonality_test_call_action"
                    name="Fonality Test Call"
                    res_model="fonality.test_call"
                    src_model="res.users"
                    view_mode="form"
                    view_id="fonality_test_call_form"
                    target="new"
                    />
    </data>
</openerp>
